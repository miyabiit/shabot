<%= javascript_include_tag 'payment' %>

<h2>支払申請書</h2>

<%= form_for @payment_header, :url => casein_payment_header_path(@payment_header) do |f| %>

  <%= render :partial => 'casein/payment_headers/form', :locals => { :f => f } %>
  
  <p class="submits">
    <%= link_to t('helpers.button.cancel'), casein_payment_headers_path, :class => 'btn btn-mini btn-danger' %>
    <%= f.submit t('helpers.submit.submit'), :class => "btn btn-mini btn-primary" %>
    <%= link_to 'PDF', pdf_casein_payment_header_path, {:class => 'btn btn-mini btn-primary', :target => "_blank", :disabled => ('disabled' if @payment_header.planned)} %>
  </p>

  <%= render partial: 'payment_parts', locals: {f: f} %>
<% end %>


<%= content_for :sidebar do %>
  <li><%= link_to "#{casein_show_icon "th-list"}一覧へ".html_safe, casein_payment_headers_path %></li>
<% end %>
