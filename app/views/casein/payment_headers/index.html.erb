<!-- Scaffolding generated by Casein v5.1.1.5 -->

<h2>支払申請書<%= casein_pagination_details @payment_headers %></h2>
<%= form_tag casein_payment_headers_path, :method => 'get' do %>
  <div class="row">
    <div class="col-lg-2">
      伝票No
      <%= text_field_tag :search, params[:search], size: 10 %>
    </div>
    <div class="col-lg-3">
      取引先名
      <%= text_field_tag :account_name, params[:account_name] %>
    </div>
    <div class="col-lg-3">
      日付
      <%= text_field_tag :from, params[:from], placeholder: 'yyyy/mm/dd', "data-provide" => "datepicker", size: 12 %>
      〜
      <%= text_field_tag :to, params[:to], placeholder: 'yyyy/mm/dd', "data-provide" => "datepicker", size: 12 %>
    </div>
    <div class="col-lg-3">
      <label>
        <%= check_box_tag :planned_true, '1', params[:planned_true] == '1' %>&nbsp;予定
      </label>
      &nbsp;
      <label>
        <%= check_box_tag :planned_false, '1', params[:planned_false] == '1' %>&nbsp;実績
      </label>
    </div>
    <div class="col-lg-1">
      <%= submit_tag "検索", :name => nil %>
    </div>
  </div>
<% end %>

<% if @sum_amount -%>
<div class="row">
  <div class="col-lg-3">
    <div class="well" style="margin-top: 20px; margin-bottom: 0px;">
      金額: <%= number_with_delimiter @sum_amount %> 円
    </div>
  </div>
</div>
<% end -%>

<%= render :partial => 'casein/payment_headers/table', :locals => { :payment_headers => @payment_headers } %>

<div class="text-center">
  <%= will_paginate @payment_headers %>
</div>
