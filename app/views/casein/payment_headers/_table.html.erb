<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "作成者", :user_id %></th>
			<th><%= casein_sort_link "伝票No", :slip_no %></th>
			<th><%= casein_sort_link "お取引先", :account_id %></th>
			<th><%= casein_sort_link "支払日", :payable_on %></th>
			<th><%= casein_sort_link "事業/プロジェクト", :project_id %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% payment_headers.each do |payment_header| %>
		<tr>
			<td><%= casein_table_cell_link current_user.name, casein_payment_header_path(payment_header) %></td>
			<td><%= casein_table_cell_link payment_header.slip_no, casein_payment_header_path(payment_header) %></td>
			<td><%= casein_table_cell_link Account.find(payment_header.account_id).name, casein_payment_header_path(payment_header) %></td>
			<td><%= casein_table_cell_link payment_header.payable_on, casein_payment_header_path(payment_header) %></td>
			<td><%= casein_table_cell_link Project.find(payment_header.project_id).name_and_category, casein_payment_header_path(payment_header) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_payment_header_path(payment_header), :method => :delete, :data => { :confirm => "Are you sure you want to delete this payment header?" }) %>
			</td>
		</tr>
	<% end %>
</table>
