<% Report::ReportList.each do |name, filename, path| %>
	<form class="form-inline" action="<%= path %>">
		<label style="display: block; width: 30pm;"><%= name %></label>
		<input type="text" class="input-medium" placeholder="from" name="from">
		<input type="text" class="input" placeholder="to" name="to">
		<button type="submit" class="btn">PDF</button>
	</form>
<% end %>

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th>Name</th>
			<th size="5%">&nbsp;</th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% Report::ReportList.each do |name, filename, path| %>
		<tr>
			<td><%= casein_table_cell_link name + '&nbsp;(&nbsp;' + filename + '&nbsp;)&nbsp;', path, {:target => '_blank'}  %></td>
			<td><%= link_to 'PDF', path, {:class => 'btn btn-mini btn-primary', :target => '_blank'} %></td>
			<td class="delete">
				&nbsp;
			</td>
		</tr>
	<% end %>
</table>
