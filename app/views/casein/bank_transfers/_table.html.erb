<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th><%= casein_sort_link BankTransfer.human_attribute_name(:target_date), :corporation_code %></th>
      <th><%= casein_sort_link BankTransfer.human_attribute_name(:user_id), :user_id %></th>
      <th><%= casein_sort_link BankTransfer.human_attribute_name(:project_id), :project_id %></th>
      <th><%= casein_sort_link BankTransfer.human_attribute_name(:src_my_account_id), :src_my_account_id %></th>
      <th><%= casein_sort_link BankTransfer.human_attribute_name(:dst_my_account_id), :dst_my_account_id %></th>
      <th><%= casein_sort_link BankTransfer.human_attribute_name(:comment), :comment %></th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  
  <% bank_transfers.each do |bank_transfer| %>
    <tr>
      <td><%= bank_transfer&.target_date %></td>
      <td><%= bank_transfer.user&.name %></td>
      <td><%= truncate(bank_transfer.project&.name, length: 15) %></td>
      <td><%= truncate(bank_transfer.src_my_account&.bank_label, length: 15) %></td>
      <td><%= truncate(bank_transfer.dst_my_account&.bank_label, length: 15) %></td>
      <td><%= truncate(bank_transfer.comment, length: 15) %></td>
      <td class="show">
        <%= table_row_pdf_icon_link_to casein_bank_transfer_path(bank_transfer, format: :pdf) %>
      </td>
      <td class="delete">
        <%= table_row_trash_icon_link_to casein_bank_transfer_path(bank_transfer), :method => :delete, :data => { :confirm => t("messages.destroy_confirmation", model_name: controller.model.model_name.human) } %>
      </td>
    </tr>
  <% end %>
</table>
