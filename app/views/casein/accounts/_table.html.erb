<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Name", :name %></th>
			<th><%= casein_sort_link "Bank", :bank %></th>
			<th><%= casein_sort_link "Bank branch", :bank_branch %></th>
			<th><%= casein_sort_link "Category", :category %></th>
			<th><%= casein_sort_link "Ac no", :ac_no %></th>
			<th>&nbsp;</th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% accounts.each do |account| %>
		<tr>
			<td><%= casein_table_cell_link account.name, casein_account_path(account) %></td>
			<td><%= casein_table_cell_link account.bank, casein_account_path(account) %></td>
			<td><%= casein_table_cell_link account.bank_branch, casein_account_path(account) %></td>
			<td><%= casein_table_cell_link account.category, casein_account_path(account) %></td>
			<td><%= casein_table_cell_link account.ac_no, casein_account_path(account) %></td>
			<td class="new">
				<%= link_to(casein_show_row_icon("plus-sign"), new_casein_payment_header_path) %>
			</td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_account_path(account), :method => :delete, :data => { :confirm => "Are you sure you want to delete this account?" }) %>
			</td>
		</tr>
	<% end %>
</table>
