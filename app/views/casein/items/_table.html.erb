<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Name", :name %></th>
			<th><%= casein_sort_link "Group", :group %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% items.each do |item| %>
		<tr>
			<td><%= casein_table_cell_link item.name, casein_item_path(item) %></td>
			<td><%= casein_table_cell_link item.group, casein_item_path(item) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_item_path(item), :method => :delete, :data => { :confirm => "Are you sure you want to delete this item?" }) %>
			</td>
		</tr>
	<% end %>
</table>