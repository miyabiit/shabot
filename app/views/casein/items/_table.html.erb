<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th><%= casein_sort_link "費目", :name %></th>
      <th><%= casein_sort_link "分類", :group %></th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  
  <% items.each do |item| %>
    <tr>
      <td><%= casein_table_cell_link item.name, casein_item_path(item) %></td>
      <td><%= casein_table_cell_link item.group, casein_item_path(item) %></td>
      <td class="delete">
      <% if @session_user.is_admin? %>
        <%= link_to(casein_show_row_icon("trash"), casein_item_path(item), :method => :delete, :data => { :confirm => t("messages.destroy_confirmation", model_name: controller.model.model_name.human) }) %>
      <% end %>
      </td>
    </tr>
  <% end %>
</table>
