<!-- Scaffolding generated by Casein v5.1.1.5 -->

<%= javascript_include_tag 'views/receipt_header' %>

<%= render 'casein/layouts/hidden_field_store' %>

<div class="row">
  <div class="col-lg-4">
    <%= "No. #{f.object.id}" %>
  </div>
</div>

<div class="row">
  <div class="col-lg-4">
    <%= casein_collection_select_i18n f, :corporation_code, MyCorporation.not_deleted, label_method: :name, include_blank: true %>
  </div>
  <div class="col-lg-4">
    <%= casein_collection_select_i18n f, :account_id, Account.not_deleted.order(:my_group, :name), label_method: :name, include_blank: true %>
  </div>
  <div class="col-lg-4">
    <%= casein_collection_select_i18n f, :project_id, Project.not_deleted.order_for_select, label_method: :name_and_category, include_blank: true %>
  </div>
</div>

<div class="row">
  <div class="col-lg-6">
    <%= casein_date_select_i18n f, :receipt_on %>
  </div>
  <% if @session_user.is_admin? -%>
    <div class="col-lg-6">
      <%= casein_collection_select_i18n f, :my_account_id, MyAccount.not_deleted, label_method: :bank_label, include_blank: "(事業・プロジェクトと同じ口座)" %>
    </div>
  <% end -%>
</div>

<div class="row">
  <div class="col-lg-4">
    <%= casein_collection_select_i18n f, :item_id, Item.not_deleted, include_blank: true %>
  </div>
  <div class="col-lg-4">
    <%= casein_text_field_i18n f, :amount, class: 'money' %>
  </div>
  <div class="col-lg-4">
    <%= casein_select_i18n f, :tax_type, ReceiptHeader.tax_type.options, include_blank: true %>
  </div>
</div>

<div class="row">
  <div class="col-lg-2">
    <div class="form-group">
      <%= f.label :planned, {class: 'control-label'} %>
      <div class="well" style="height: 74px">
        <%= f.check_box :planned %>&nbsp; <%= f.label :planned, '予定', {class: 'control-label'} %>
      </div>
    </div>
  </div>
  <div class="col-lg-2">
    <div class="form-group">
      <%= f.label :monthly_data, {class: 'control-label'} %>
      <div class="well" style="height: 74px">
        <%= f.check_box :monthly_data %>&nbsp; <%= f.label :monthly_data, '定例', {class: 'control-label'} %>
      </div>
    </div>
  </div>
  <% if @session_user.is_admin? -%>
    <div class="col-lg-2">
      <div class="form-group">
        <%= f.label :no_monthly_report, {class: 'control-label'} %>
        <div class="well" style="height: 74px">
          <%= f.check_box :no_monthly_report %>&nbsp; <%= f.label :no_monthly_report, '対象外', {class: 'control-label'} %>
        </div>
      </div>
    </div>
  <% end -%>
  <div class="col-lg-2">
    <div class="form-group">
      <%= f.label :invoice_target, {class: 'control-label'} %>
      <div class="well" style="height: 74px">
        <%= f.check_box :invoice_target %>&nbsp; <%= f.label :invoice_target, '対象', {class: 'control-label'} %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <%= casein_text_area_i18n f, :comment %>
  </div>
</div>

<hr>

<%= f.fields_for :receipt_invoice_info do |invoice_f| %>
  <div class="row">
    <div class="col-lg-2">
      <%= casein_text_field_i18n invoice_f, :dst_post_num %>
    </div>
    <div class="col-lg-5">
      <%= casein_text_field_i18n invoice_f, :dst_address1 %>
    </div>
    <div class="col-lg-5">
      <%= casein_text_field_i18n invoice_f, :dst_address2 %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <%= casein_text_field_i18n invoice_f, :dst_person_name %>
    </div>
  </div>

  <hr>

  <div class="row">
    <div class="col-lg-2">
      <%= casein_text_field_i18n invoice_f, :src_post_num %>
    </div>
    <div class="col-lg-5">
      <%= casein_text_field_i18n invoice_f, :src_address1 %>
    </div>
    <div class="col-lg-5">
      <%= casein_text_field_i18n invoice_f, :src_address2 %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <%= casein_text_field_i18n invoice_f, :src_tel %>
    </div>
    <div class="col-lg-6">
      <%= casein_text_field_i18n invoice_f, :src_fax %>
    </div>
  </div>

  <hr>

  <div class="row">
    <div class="col-lg-6">
      <%= casein_text_field_i18n invoice_f, :trans_dst_bank_info %>
    </div>
    <div class="col-lg-6">
      <%= casein_text_field_i18n invoice_f, :trans_dst_bank_account_name %>
    </div>
  </div>
<% end -%>
