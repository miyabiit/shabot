<h2><%= ReceiptHeader.model_name.human %> <%= casein_pagination_details @receipt_headers %></h2>
<div class="row">
<%= form_tag casein_receipt_headers_path, :method => 'get' do %>
  <div class="col-lg-3">
    伝票No
    <%= text_field_tag :slip_no, params[:slip_no] %>
  </div>
  <div class="col-lg-3">
    入金元
    <%= text_field_tag :account_name, params[:account_name] %>
  </div>
  <div class="col-lg-5">
    日付
    <%= text_field_tag :from, params[:from], placeholder: 'yyyy/mm/dd', "data-provide" => "datepicker" %>
    〜
    <%= text_field_tag :to, params[:to], placeholder: 'yyyy/mm/dd', "data-provide" => "datepicker" %>
  </div>
  <div class="col-lg-1">
    <%= submit_tag "検索", :name => nil %>
  </div>
<% end %>
</div>

<%= render :partial => 'casein/receipt_headers/table', :locals => { :receipt_headers => @receipt_headers } %>

<div class="text-center">
  <%= will_paginate @receipt_headers %>
</div>

<%= content_for :sidebar do %>

  <li><%= link_to "#{casein_show_icon "plus-sign"}#{t 'helpers.link.add'} #{ReceiptHeader.model_name.human}".html_safe, new_casein_receipt_header_path %></li>

<% end %>
