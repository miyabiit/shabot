<!-- Scaffolding generated by Casein v5.1.1.5 -->

<%= javascript_include_tag 'payment' %>

<h2><%= ReceiptHeader.model_name.human %></h2>

<%= form_for @receipt_header, :url => casein_receipt_header_path(@receipt_header) do |f| %>

  <%= render :partial => 'casein/receipt_headers/form', :locals => { :f => f } %>
  
  <p class="submits">
    <%= link_to t("helpers.button.cancel"), casein_receipt_headers_path, :class => 'btn btn-mini btn-danger' %>
    <%= f.submit t("helpers.submit.submit"), :class => "btn btn-mini btn-primary" %>
    <%= f.submit t('helpers.submit.add_and_return_index'), :class => "btn btn-mini btn-primary", name: :add_and_return_index %>
    <%= link_to '入金予定PDF', plan_pdf_casein_receipt_header_path, class: 'btn btn-mini btn-primary', target: "_blank" %>
    <%= link_to '請求書PDF', invoice_pdf_casein_receipt_header_path, class: 'btn btn-mini btn-primary', target: "_blank", disabled: !@receipt_header.invoice_target? %>
  </p>

<% end %>

<%= content_for :sidebar do %>
  <li><%= link_to "#{casein_show_icon "th-list"}#{t 'helpers.link.back_to_list'}".html_safe, casein_receipt_headers_path(query_params) %></li>
<% end %>
