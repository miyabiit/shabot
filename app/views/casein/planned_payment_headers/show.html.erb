<!-- Scaffolding generated by Casein v5.1.1.5 -->

<%= javascript_include_tag 'payment' %>

<h2>支払予定</h2>

<%= form_for @payment_header, :url => casein_planned_payment_header_path(@payment_header) do |f| %>

  <%= render :partial => 'casein/payment_headers/form', :locals => { :f => f } %>
  
  <p class="submits">
    <%= link_to t('helpers.button.cancel'), casein_planned_payment_headers_path, :class => 'btn btn-mini btn-danger' %>
    <%= link_to '明細追加', add_part_casein_planned_payment_header_path, :class => 'btn btn-mini btn-danger' %>
    <%= f.submit t('helpers.submit.submit'), :class => "btn btn-mini btn-primary" %>
    <%= link_to  'PDF', pdf_casein_payment_header_path, {:class => 'btn btn-mini btn-primary', :disabled => ('disabled' if @payment_header.planned)} %>
  </p>

<% end %>

<% @payment_header.payment_parts.each do |payment_part| %>
<%= form_for payment_part, :url => casein_payment_part_path(payment_part) do |f| %>
<div class="row">
  <div class="col-lg-6">
    <% items = Item.all %>
    <%= casein_collection_select f, f.object, :payment_part, :item_id, items, :id, :name, {:selected => f.object.item_id, :casein_label => '費目' } %>
  </div>
  <div class="col-lg-3">
    <%= casein_text_field f, f.object, :amount , {:casein_label => '金額', :class => 'money'} %>
  </div>
  <div class="col-lg-3">
  </br>
  </br>
  <p class="submits">
    <%= link_to t('helpers.link.delete'), casein_payment_part_path(payment_part), :method => :delete, :class => 'btn btn-mini btn-danger', 
      :data => { :confirm => "Are you sure you want to delete this payment part?" } %>
    <%= f.submit t('helpers.submit.submit'), :class => "btn btn-mini btn-primary" %>
  </p>
  </div>
</div>
<% end %>
<% end %>

<%= content_for :sidebar do %>
  <li><%= link_to "#{casein_show_icon "th-list"}一覧へ".html_safe, casein_planned_payment_headers_path %></li>
<% end %>
